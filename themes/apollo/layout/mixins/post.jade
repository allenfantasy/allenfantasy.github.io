mixin postInfo(item)
    .post-meta
        span.post-time
            != full_date(item.date, 'll')
        span.taglist
            if item.tags
                each tag in item.tags.data
                    a.tag(href="/tags/#{tag.name}")= tag.name

//- Index Page
mixin posts()
    ul.home.post-list
        - page.posts.each(function (item) {
            li.post-list-item
                article.post-block
                    h2.post-title
                        a.post-title-link(href= url_for(item.path))
                            != item.title
                    +postInfo( item )
                    .post-content
                        != item.excerpt
                    a.read-more(href=item.path)!= __('more')
        - })

//- Post Page
mixin post(item)
    .post
        article.post-block
            h1.post-title
                != item.title
            +postInfo(item)
            .post-content
                != item.content